{
  "name": "document-ts",
  "version": "4.3.0",
  "description": "A very thin TypeScript-based async MongoDB helper with optional ODM convenience features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "standardize": "import-sort --write \"lib/**/*.ts\" && prettier --write \"lib/**/*.ts\"",
    "standardize:ci": "import-sort -l \"lib/**/*.ts\" && prettier --check \"lib/**/*.ts\"",
    "build": "tsc -p tsconfig.lib.json",
    "build:test": "tsc -p tests/tsconfig.spec.json",
    "prepublishOnly": "npm run test",
    "prepare": "npm run build",
    "pretest": "npm run build && npm run build:test",
    "test": "ts-node node_modules/jasmine/bin/jasmine --config=./jasmine.json",
    "test:nyc": "nyc ts-node node_modules/jasmine/bin/jasmine --config=./jasmine.json",
    "standalone": "node tests/standalone"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duluca/DocumentTS.git"
  },
  "keywords": [
    "mongodb",
    "odm",
    "typescript",
    "async"
  ],
  "author": "Doguhan Uluca",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/duluca/DocumentTS/issues"
  },
  "homepage": "https://github.com/duluca/DocumentTS#readme",
  "dependencies": {},
  "peerDependencies": {
    "mongodb": "^3.3.3"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^0.1.3",
    "@types/bcryptjs": "^2.4.2",
    "@types/jasmine": "^3.4.4",
    "@types/mongodb": "^3.3.7",
    "@types/node": "^12.12.0",
    "@types/uuid": "^3.4.5",
    "audit-ci": "^2.4.2",
    "bcryptjs": "^2.4.3",
    "cross-conf-env": "^1.1.2",
    "dev-norms": "^1.7.0",
    "import-sort": "^6.0.0",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "jasmine": "^3.5.0",
    "jasmine-node": "^3.0.0",
    "mongodb": "^3.3.3",
    "mongodb-memory-server": "^6.0.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "source-map-support": "^0.5.16",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.4",
    "uuid": "^3.3.3"
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module",
      "options": {}
    }
  },
  "prettier": {
    "printWidth": 90,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "typescript"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "check-coverage": true,
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/tests",
      "specs.js",
      "**/coverage"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "cobertura"
    ],
    "branches": 80,
    "lines": 89,
    "functions": 92,
    "statements": 90
  }
}
