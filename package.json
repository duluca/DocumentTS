{
  "name": "document-ts",
  "version": "3.0.0",
  "description": "A very thin TypeScript-based async MongoDB helper with optional ODM convenience features",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "standardize": "import-sort --write \"**/*.ts\" && prettier --write \"**/*.ts\"",
    "build": "tsc",
    "build:test": "tsc -p tests",
    "prepublishOnly": "npm run test",
    "prepare": "npm run build",
    "pretest": "npm run build && npm run build:test",
    "test": "cross-conf-env jasmine JASMINE_CONFIG_PATH=jasmine.json",
    "prestandalone": "npm run pretest",
    "standalone": "node tests/standalone"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/duluca/DocumentTS.git"
  },
  "keywords": [
    "mongodb",
    "odm",
    "typescript",
    "async"
  ],
  "author": "Doguhan Uluca",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/duluca/DocumentTS/issues"
  },
  "homepage": "https://github.com/duluca/DocumentTS#readme",
  "dependencies": {
    "bluebird": "^3.5.4",
    "lodash": "^4.17.11"
  },
  "peerDependencies": {
    "mongodb": "^3.2.3"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.26",
    "@types/jasmine": "^3.3.12",
    "@types/lodash": "^4.14.123",
    "@types/mongodb": "^3.1.0",
    "@types/uuid": "^3.4.4",
    "bcryptjs": "^2.4.3",
    "cross-conf-env": "^1.1.2",
    "dev-norms": "^1.7.0",
    "import-sort": "^6.0.0",
    "import-sort-cli": "^6.0.0",
    "import-sort-parser-typescript": "^6.0.0",
    "import-sort-style-module": "^6.0.0",
    "jasmine": "^3.4.0",
    "mongodb": "^3.2.3",
    "mongodb-memory-server": "^4.2.2",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "typescript": "^3.4.2",
    "uuid": "^3.3.2"
  },
  "importSort": {
    ".ts, .tsx": {
      "parser": "typescript",
      "style": "module",
      "options": {}
    }
  },
  "prettier": {
    "printWidth": 90,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "parser": "typescript"
  }
}
